/*
* Locking Pancakeswap token until release_time (expressed in Unix epoch time)
* See https://www.unixtimestamp.com/ for conversion
* + wallet migration possibilities (without locking removal)
*/

contract LP_lock is Ownable {

    address wallet;
    IPancakePair public LP_token_contract;
    uint256 public release_time;

    event withdrawed (address to, uint256 bal);

    constructor (address _wallet, IPancakePair _LP_token_contract, uint256 _release_time) {
        require(_LP_token_contract.totalSupply() != 0, "Provide valid non-0 LP token contract"); //provide sanity test for degens
        wallet = _wallet;
        LP_token_contract = _LP_token_contract;
        release_time = _release_time;
    }

    /*
    * unlock, or try to. Will revert if too soon (that's what she said)
    */
    function gimme_my_liquidity () public onlyOwner {
        require(release_time <= block.timestamp, "LP still locked");
        uint256 balance = LP_token_contract.balanceOf(address(this));
        LP_token_contract.transfer(wallet, balance);
        emit withdrawed(wallet, balance);
    }

    function migrate_wallet (address new_wallet) public onlyOwner {
        wallet = new_wallet;
    }

    function get_balance() public view returns (uint256) {
        return LP_token_contract.balanceOf(address(this));
    }

}
